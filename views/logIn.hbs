<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log in</title>
    <!-- bootstrap start -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- bootstrap end -->
    <link rel="stylesheet" href="log in.html" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/logIn.css" />
  </head>
  <body>

    
<nav class="navbar navbar-expand-lg  color">
    <div class="container-fluid ">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ">
          <li class="nav-item">
            <a class="nav-link active color" aria-current="page" href="/">Home</a>
          </li>
         <li class="nav-item">
            <a class="nav-link active color" aria-current="page" href="/user">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active color" aria-current="page" href="/register">Register</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<div class="bigContainer">
    <div class="logIn ">
      <form action="/auth2/user" method="POST">
        <h1>Developer</h1>
<div class="whiteLine">
        <label>User name Or E-mail</label>
        <input type="email" placeholder="E-mail" name="email" id="email" />
        <i style="font-size:17px" class="fa">&#xf2bd;</i>
</div>
<div class="whiteLine">
        <label>Password</label>
        <input type="password" placeholder="Password" name="password" id="password" />
        <i style="font-size:17px" class="fa">&#xf023;</i>
</div>
        <div class="remember">
          <input type="checkbox"/>Remember me
          <a href="url">Forget Password</a>
        </div>

        <input type="submit" value="SIGN UP" />

      <div class="font">
           <h5>Not a member yet ?</h5><a href="/register">Sign Up</a>
      </div> 
      </form>
    </div>
    </div>
    {{#if message}}
      <h4 class="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
  </body>
</html>