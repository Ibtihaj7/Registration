                <h4 style="width: 90%!important; margin-left:auto;margin-right:auto;" class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}
          <input style="padding: 20px;" type="password" placeholder="Create a new password" name="pass1"><br><br><br>
          <input style="padding: 20px;" type="password" placeholder="Comfirm a new password" name="pass2">

