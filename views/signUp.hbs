<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <!-- bootstrap start -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous" ></script>
    <!-- bootstrap end -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css" />
    <link rel="stylesheet" href="/style.css" />

  </head>
  <body>


    <div class="bigContainer">
    {{#if message}}
      <h4 class="alert alert-danger fixe">{{message}}</h4>
    {{/if}}
      <div class="signUp">
        <form action="/auth/register" method="POST">

          <h2>Sign Up</h2>
          <div class="whiteLine">
            <label>Name</label>
            <input type="text" placeholder="Name" name="name" id="name" />
            <i style="font-size: 17px" class="fa">&#xf2bd;</i>
          </div>
          <div class="whiteLine">
            <label>Email</label>
            <input type="email" placeholder="E-mail" name="email" id="email" />
            <i style="font-size: 17px" class="fa">&#xf0e0;</i>
          </div>
          <div class="whiteLine">
            <label>Contact No</label>
            <input type="text" placeholder="Phone" name="phone" id="phone" />
            <i style="font-size: 17px" class="fa">&#xf095;</i>
          </div>
          <div class="whiteLine">
            <label>Password</label>
            <input type="password" placeholder="Password" name="password" id="password" />
            <i style="font-size: 17px" class="fa">&#xf023;</i>
          </div>
          <div class="whiteLine">
            <label>Re-type Password</label>
            <input type="password" placeholder="Password" name="repassword" id="repassword" />
            <i style="font-size: 17px" class="fa">&#xf023;</i>
          </div>

          <input type="submit" value="SIGN UP" />
          <div style="display:flex;justify-content:space-evenly" class="">

          </div>
        </form>
           </div>
    </div>
          <div class="h5"><h5>Have an account?</h5><a href="/user">Log in</a></div> 


    <!-- <a href="#" onclick="signOut();">Sign out</a> -->


  </body>
</html>